<!-- Dashboard Top Nav -->
<div id="top-menu">
    <div class="row expanded collapse">
        <div class="large-2 medium-4 small-12 columns top-part-no-padding">
            <div class="logo-bg">
                <img src="<%= current_usercompany.company.logo %>" alt="logo"/>
                <i class="fi-list toggles" data-toggle="hide"></i>
            </div>
        </div>
        <div class="large-10 medium-8 small-12 columns top-menu">
            <div class="row">
                
                <div class="large-4 medium-6 small-12 columns text-center float-right">

                    <% if usercompany_signed_in? %>
                    <div class="row">
                        <div class="medium-3 small-3 columns">
                            <div class="notification">
                                <i class="fi-mail"></i>
                                <span class="mail">4</span>
                            </div>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <div class="notification">
                                <i class="fi-megaphone"></i>
                                <span class="megaphone">5</span>
                            </div>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <img src="<%= current_usercompany.photo %>" alt="picture" class="top-bar-picture" />
                        </div>
                        <div class="medium-3 small-3 columns">
                            <a href="<%= destroy_usercompany_session_path %>" data-method="delete" class="log-out">
                                <i class="fi-power power-off"></i>
                            </a>
                        </div>
                    </div>

                    <% end %>

                    <% if user_signed_in? %>
                    <div class="row">
                        <div class="medium-3 small-3 columns">
                            <div class="notification">
                                <i class="fi-mail"></i>
                                <span class="mail">4</span>
                            </div>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <div class="notification">
                                <i class="fi-megaphone"></i>
                                <span class="megaphone">5</span>
                            </div>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <img src="<%= current_user.photo %>" alt="picture" class="top-bar-picture" />
                        </div>
                        <div class="medium-3 small-3 columns">
                            <a href="<%= destroy_user_session_path %>" data-method="delete" class="log-out">
                                <i class="fi-power power-off"></i>
                            </a>
                        </div>
                    </div>

                    <% end %>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- Dashboard Top Nav -->