<!-- Dashboard Top Nav -->
<div id="top-menu">
    <div class="row expanded collapse">
        <div class="large-2 medium-4 small-12 columns top-part-no-padding">
            <div class="logo-bg">
                <% if usercompany_signed_in? %>
                    <img src="<%= current_usercompany.company.logo %>" alt=""/>
                <% end %>
                <i class="fi-list toggles" data-toggle="hide"></i>
            </div>
        </div>
        <div class="large-10 medium-8 small-12 columns top-menu">
            <div class="row">
                
                <div class="large-10 medium-6 small-12 columns text-center float-right">

                    <% if usercompany_signed_in? %>
                    <div class="row">
                        <div class="medium-5 small-5 columns">
                            <span style="color: white; float: left; font-size: 16px; padding-left: 15px; margin-top: 10px;">Company: <%= @company.name %></span>
                        </div>
                        <div class="medium-2 small-2 columns">
                            <div class="notification">
                                <i class="fi-megaphone"></i>
                                <span class="megaphone">5</span>
                            </div>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <img src="<%= current_usercompany.photo %>" alt="" class="top-bar-picture" style="float: left;"/>
                            <span style="color: white; float: left; font-size: 12px; padding-left: 15px; margin-top: 10px;"><%= current_usercompany.firstname %> <%= current_usercompany.lastname %></span>
                        </div>
                        <div class="medium-2 small-2 columns">
                            <a href="<%= destroy_usercompany_session_path %>" data-method="delete" class="log-out">
                                <i class="fi-power power-off"></i>
                            </a>
                        </div>
                    </div>

                    <% end %>

                    <% if user_signed_in? %>
                    <div class="row">
                        <div class="medium-3 small-3 columns">
                            <div class="notification">
                                <i class="fi-megaphone"></i>
                                <span class="megaphone">5</span>
                            </div>
                        </div>
                        <div class="medium-6 small-6 columns">
                            <img src="<%= current_user.photo %>" alt="" class="top-bar-picture" style="float: left;"/>
                            <span style="color: white; float: left; font-size: 12px; padding-left: 15px; margin-top: 10px;"><%= current_user.firstname %> <%= current_user.lastname %></span>
                        </div>
                        <div class="medium-3 small-3 columns">
                            <a href="<%= destroy_user_session_path %>" data-method="delete" class="log-out">
                                <i class="fi-power power-off"></i>
                            </a>
                        </div>
                    </div>

                    <% end %>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- Dashboard Top Nav -->