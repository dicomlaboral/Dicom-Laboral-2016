<% if @user.present? %>
	$("#name").html("<%= @user.firstname ||= '' %>");
	$("#birthday").html("<%= @user.birthday ||= '' %>");
	$("#email").html("<%= @user.email ||= '' %>");
	$("#phone").html("<%= @user.phone ||= '' %>");

	<% if @user.photo? %>
		$("#worker_avatar").css("backgroundImage", "url('<%= @user.photo %>')");
	<% end %>

	$("#msjresult").html("");
	$("#usermarco").css("display", "");
	<% if @user.company_id? %>
		$("#detail_link").css("display", "");
		$("#create_work_link").css("display", "none");
		$("#detail_link").attr('href', '<%= companies_workers_path %>/<%=@user.id %>');
	<% else %>
		alert('sin relacion laboral')
		$("#detail_link").css("display", "none");
		$("#create_work_link").css("display", "");
		$("#create_work_link").attr('href', '<%= companies_workers_new_path %>/<%=@user.id %>');
	<% end %>
<% else %>
	$("#usermarco").css("display", "none");
	$("#msjresult").html("No results found");
<% end %>