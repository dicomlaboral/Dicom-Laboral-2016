
<%= render "partials/dashboard_header" %>


<div class="row expanded wrapper collapse">
    <div class="large-12 columns content-bg">

        <div class="row collapse">
            <div class="no-padding">
                <div class="large-2 medium-12 small-12 columns">
                    <%= render "partials/dashboard_nav_bar" %>
                </div>
            </div>
            <div class="large-10 medium-12 small-12 columns light-grey-bg-pattern">

                <div class="row">
                    <div class="large-2 columns">

                        <% if @worker.photo? %>
                            <div class="worker-avatar border-white" style="background-image: url(<%= @worker.photo %>)"></div>
                        <% else %>
                            <div class="worker-avatar border-white"></div>
                        <% end %>
                        
                    </div>
                    <div class="large-10 columns">
                        <div class="page-name">
                            <h3 class="left"><%= @worker.firstname %> <%= @worker.lastname %> | Worker Profile</h3>
                            <div class="clearfix"></div>
                            <ul class="worker-resume">
                                <li><strong>Nombre y Apellido:</strong> <%= @worker.firstname %> <%= @worker.lastname %></li>
                                <li><strong>Fecha de Nacimiento:</strong> <%= @worker.birthday %></li>
                                <li><strong>Email:</strong> <a href="mailto:<%= @worker.email %>"><%= @worker.email %></a></li>
                                <li><strong>Teléfono:</strong> <%= @worker.phone %></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- SEARCH WORKER -->
                <div class="row">
                    <div class="large-12 columns">
                        
                        
                        <section id="cd-timeline" class="cd-container">
                            
                            <% @works.each do |work| %>
                            
                            <div class="cd-timeline-block">
                                <div class="cd-timeline-img good">
                                    <i class="fi-check"></i>
                                </div> <!-- cd-timeline-img -->

                                <div class="cd-timeline-content">
                                    <h2><%= work.company.name %></h2>
                                    <p><%= work.company.description %></p>
                                    <a class="cd-read-more" data-trigger-modal="<%= work.id %>">Ver detalle</a>

                                    <span class="cd-date">
                                        <strong>From:</strong> <%= work.start_date %> - <strong>To:</strong> <%= work.end_date %>
                                        <br>
                                        <strong>Total Time:</strong> <%= distance_of_time_in_words(work.start_date, work.end_date) %>
                                    </span>
                                </div> <!-- cd-timeline-content -->
                            </div>

                            <% end %>


                            <div class="cd-timeline-block hide">
                                <div class="cd-timeline-img bad">
                                    <i class="fi-alert"></i>
                                </div> <!-- cd-timeline-img -->

                                <div class="cd-timeline-content">
                                    <h2>Company Name</h2>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iusto, optio, dolorum provident rerum aut hic quasi placeat iure tempora laudantium ipsa ad debitis unde?</p>
                                    <a href="#0" class="cd-read-more">Ver detalle</a>
                                    <span class="cd-date"><strong>From:</strong> Jan 14 - <strong>To:</strong> Jan 15</span>
                                </div> <!-- cd-timeline-content -->
                            </div>

                            <div class="cd-timeline-block hide">
                                <div class="cd-timeline-img regular">
                                    <i class="fi-minus"></i>
                                </div> <!-- cd-timeline-img -->

                                <div class="cd-timeline-content">
                                    <h2>Company Name</h2>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iusto, optio, dolorum provident rerum aut hic quasi placeat iure tempora laudantium ipsa ad debitis unde? Iste voluptatibus minus veritatis qui ut.</p>
                                    <a href="#0" class="cd-read-more">Ver detalle</a>
                                    <span class="cd-date"><strong>From:</strong> Jan 14 - <strong>To:</strong> Jan 15</span>
                                </div> <!-- cd-timeline-content -->
                            </div>

                            <div class="cd-timeline-block hide">
                                <div class="cd-timeline-img regular">
                                    <i class="fi-minus"></i>
                                </div> <!-- cd-timeline-img -->

                                <div class="cd-timeline-content">
                                    <h2>Company Name</h2>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iusto, optio, dolorum provident rerum.</p>
                                    <a href="#0" class="cd-read-more">Ver detalle</a>
                                    <span class="cd-date"><strong>From:</strong> Jan 14 - <strong>To:</strong> Jan 15</span>
                                </div> <!-- cd-timeline-content -->
                            </div>

                            <div class="cd-timeline-block hide">
                                <div class="cd-timeline-img bad">
                                    <i class="fi-alert"></i>
                                </div> <!-- cd-timeline-img -->

                                <div class="cd-timeline-content">
                                    <h2>Final Section</h2>
                                    <p>This is the content of the last section</p>
                                    <span class="cd-date"><strong>From:</strong> Jan 14 - <strong>To:</strong> Jan 15</span>
                                </div> <!-- cd-timeline-content -->
                            </div>

                        </section> <!-- cd-timeline -->


                    </div>
                </div>
                <!-- //SEARCH WORKER -->

            </div>
        </div>
    </div>
</div>



